{% extends 'HBBlogBundle::layout.html.twig' %}
{% block title %}Welcome sur le page de liste des articles!{% endblock %}

{% block content -%}
    <h1>Article list</h1>

    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Creationdate</th>
                <th>Publishdate</th>
                <th>Lasteditdate</th>
                <th>Published</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody  class="table">
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{% if article.creationDate %}{{ article.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if article.publishDate %}{{ article.publishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if article.lastEditDate %}{{ article.lastEditDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ article.published }}</td>
                <td>{{ article.enabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('article_new') }}">
                Create a new entry
            </a>
                
        </li>
    </ul>
    {% endblock %}
